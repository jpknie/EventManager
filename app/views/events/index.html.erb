<section id="event-filters" class="content-section text-center">
<div class="form-horizontal">
<label for="event">Filter by location:</label>
<%= select(:event, :location_id, options_from_collection_for_select(Location.all, :id, :name),
	{include_blank: true}, class: 'form-control', style: 'width: 30%; margin-left: auto; margin-right: auto;')
%>
by month:
<%= select_tag('Month', ['Jan','Feb'], class: 'form-control', style: 'width: 30%; margin-left: auto; margin-right: auto;') %>
</div>
</section>
<section id="event-listing" class="container-fluid content-section text-center">
	<div class="row">
    	<div class="col-lg-10 col-lg-offset-1">
			<div id="entries">
				<% @events.each do |event| %>
					<div class="col-lg-6">
						<h2><%= link_to event.title, event_path(event) %></h2>
						<p><%= event.description %></p>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="event-buttons col-lg-8 col-lg-offset-2">
		<%= link_to "<button class='btn-default btn form-control'>Add new event</button>".html_safe, new_event_path %>
	</div>
</section>